<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:textColor="@android:color/black"
    tools:context=".YourTranslationsActivity">

  <!-- TextView for Recent Translations -->
  <TextView
      android:id="@+id/tvRecentTranslations"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:padding="16dp"
      android:text="Recent Translations"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:textStyle="bold"/>
  <Button
      android:id="@+id/btnGeneratePDF"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Generate PDF"
      android:onClick="onGeneratePDFClick"/>



  <!-- ListView to display translations -->
  <ListView
      android:id="@+id/listViewTranslations"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:divider="@android:color/transparent"
      android:dividerHeight="8dp"
      android:padding="8dp"
      android:textColor="@color/black" />

</LinearLayout>